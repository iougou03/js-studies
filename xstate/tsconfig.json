{
  "compilerOptions": {
     "strict": true,
     "module": "CommonJS",
     "target": "ES6",
     "esModuleInterop": true,
     "sourceMap": true,
     "rootDir": "src",
     "outDir": "dist/",
     "noEmitOnError": true,
     "typeRoots": [ 
       "node_modules/@types",
    ],

    "paths": {
      "xstate": ["../node_modules/xstate"]
    },
    "baseUrl": "./src",

     "experimentalDecorators": true,
     "moduleResolution": "node",

     "useDefineForClassFields": false,

  },
  "include": ["./**/*.ts"],
  "exclude": ["./**/*.test.ts"]
}